import 'package:flutter_test/flutter_test.dart';
import 'package:union_shop/models/product_image_selector.dart';
import 'package:flutter/material.dart';

void main() {
	testWidgets('ProductImageSelector displays main image and thumbnails', (WidgetTester tester) async {
		final images = [
			'https://via.placeholder.com/150',
			'https://via.placeholder.com/200',
		];
		int selectedImage = 0;
		await tester.pumpWidget(MaterialApp(
			home: ProductImageSelector(
				images: images,
				selectedImage: selectedImage,
				onImageSelected: (i) => selectedImage = i,
			),
		));
		expect(find.byType(Image), findsNWidgets(3)); // 1 main + 2 thumbnails
	});
}
